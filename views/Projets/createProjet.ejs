<!doctype html>
<html>
    <head>
        <title>Création projet</title>
        <% include ../layout %>
    </head>
    <body>
    <div class="wrapper">
			<% include ../Menus/MenuEnseignant %>
			<!-- Page Content  -->
			<div id="content">
				<div class="col-sm-6 col-sm-offset-3">

					<h1>Projet</h1>

					<form action="/<%= chemin %>" method="post">
						<div class="form-group">
							<label>Nom :</label>
							<input type="text" class="form-control" name="nom" maxlength="50" required>
						</div>
						<div class="form-group">
							<label>Description :</label>
							<input type="textarea" class="form-control" name="description" maxlength="300">
						</div>
						<div class="form-group">
							<label>Fonctionnalité(s) :</label>
							<input type="textarea" class="form-control" name="fonctionnalite" maxlength="300">
						</div>
						<div class="form-group">
							<label>Matière :</label>
							<select name="matiere">
								<% for(var i=0; i<matieres.length; i++) {%>
								<option value="<%=matieres[i].idM%>"><%=matieres[i].nomM%> (<%=matieres[i].nomP%>)</option>
								<% } %>
							</select>
						</div>
						<div class="pull-right">
							<a href="/<%= chemin %>" class="btn btn-secondary btn-lg">Annuler</a>
							<button type="submit" class="btn btn-success btn-lg">Créer</button>
						</div>
					</form>
				</div>
			</div>
        </div>
    </body>
</html>
